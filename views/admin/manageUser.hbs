<div class="container-fluid page-body-wrapper">
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-md-12 grid-margin">
                    <div class="row">
                        <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                            <h3 class="font-weight-bold">Welcome back, Trung</h3>
                            <h6 class="font-weight-normal mb-0">All systems are running smoothly! You have <span
                                    class="text-primary">3 unread alerts!</span></h6>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Add User</h4>
                            <form class="form-inline" action="/account" method='post'>
                                <label class="sr-only" for="addUser">Name</label>
                                <input type="text" class="form-control mb-2 mr-sm-2" name="phone"
                                    placeholder="Phone number..."
                                    style="margin: 45px 45px; width: calc(100% - 90px); border: 1px solid #4B49AC">
                                <button class="btn mt-2" id="btn-top-up" type="submit"> ADD</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 grid-margin stretch-card">
                    <div class="card card-tale card-dark-blue h-50">
                        <div class="card-body">
                            <p class="mb-4">Total users</p>
                            <p class="fs-30 mb-2">{{total_users}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-title mb-0">User Account</p>

                            <div class="table-responsive">
                                <table class="table table-striped table-borderless">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Username</th>
                                            <th>Phone Number</th>
                                            <th>Balance</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each users}}
                                            <tr>
                                                <td class="py-1">{{sum @index 1}}</td>
                                                <td>{{this.username}}</td>
                                                <td class="font-weight-bold">{{this.phone}}</td>
                                                <td>{{this.balance}}</td>
                                                <td class="font-weight-medium">
                                                    <div class="badge badge-danger hover-cursor" data-toggle="modal" data-target="#{{this.username}}"><i class="icon-trash mx-2"></i></div>
                                                </td>
                                            </tr>
                                            <div class="modal fade" id="{{this.username}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure to delete user {{this.username}} ?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="{{this.username}}" onclick="onclickDelete(id)">Delete</button>
                                                    </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- main-panel ends -->
</div>